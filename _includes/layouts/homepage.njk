---
layout: base.njk
templateClass: tmpl-homepage
---
<div class="section">
<h2 class="section-header">Latest in Blog</h2>
{% set latestposts = collections.post | reverse | limit(3) %}
{% for post in latestposts %}
  <a href="{{post.url}}">
    <div class="article">
      <h3 class="article-title">{{ post.data.title }}</h3>
      <p class="article-date">{{post.date | postDate }}</p>
    </div>
  </a>
{% endfor %}
<a href="post-list"><button class="btn btn-secondary btn-lg">See all</button></a>
</div>

<div class="section">
<h2 class="section-header">Notes</h2>

</div>
{{ content | safe }}